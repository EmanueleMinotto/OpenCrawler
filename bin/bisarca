#!/usr/bin/env php
<?php

use Bisarca\Bisarca;

require __DIR__.'/../vendor/autoload.php';

$bisarca = new Bisarca();

echo sprintf('Loading %d URLs'.PHP_EOL.PHP_EOL, $argc - 1);

for ($i = 1; $i < $argc; ++$i) {
    $url = $argv[$i];

    echo sprintf('Loading URL #%d: %s ... ', $i, $url);

    $bisarca->loadUrl($url);

    echo 'OK'.PHP_EOL;
}
